{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "listFiles": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
  },
  "include": [
    "src",
    "tests",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules"]
}
